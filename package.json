    "tslint": "^5.16.0",
    "typescript": "^3.4.3"
  },
  "devDependencies": {
    "jest": "^24.5.0",
    "nock": "^10.0.6",
    "sinon": "^7.2.7"
  },
  "engines": {
    "node": "11"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
